<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
			xmlns:xsi="http://www.v3.org/2001/XMLSchema-instance"
			version="2.0">

    <persistence-unit name="DDS">
        <description>
        Persistence unit JPA with Hibernate
        </description>
        
        <class>Desarrollo.Perfil</class>
      
        <properties>

            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433"/>
             <property name="hibernate.default_schema">QUEMEPONGO</property>
            <property name="javax.persistence.jdbc.user" value="ROMERO"/>
            <property name="javax.persistence.jdbc.password" value="Cris01"/>

            <!--Hibernate properties-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            

        </properties>
    </persistence-unit>
</persistence>